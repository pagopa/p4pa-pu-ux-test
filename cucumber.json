{
  "default": {
    "formatOptions": {
        "snippetInterface": "async-await"
    },
    "format": [
      "@cucumber/pretty-formatter",
      ["junit", "report/junitreport.xml"],
      ["html", "report/cucumber-html-report.html"],
      ["json", "report/report.json"]
    ],
    "import": [
      "features/step/**/*.steps.js",
      "config/config.mjs",
      "setup/hooks.cjs"
    ],
    "paths" : [
      "features/**/*.feature"
    ]
  }
}